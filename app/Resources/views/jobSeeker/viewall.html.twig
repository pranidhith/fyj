{# app/Resources/views/default/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
All Job Seekers
{% endblock %}


{% block body %}

<table width="100%">
	<tr>
		<th>Name</th>
		<th>Expected Salary</th>
        <th>Contact Number</th>
        <th>Email Address</th>
        <th>Account Created Date</th>
        <th>LinkedIn Profile</th>
        
    </tr>

    {% for js in jobSeekers %}
        <tr>
        <td>
        <a href="{{url('jobSeeker_view',{'id':js.id})}}">{{ js.name|e }}</a>
        </td>

		<td>{{ js.expectedSalary|e }}
        </td>

        <td>{{ js.contactNo|e }}
        </td>

        <td>{{ js.emailAddress|e }}
        </td>

        <td>{{ js.accCreatedDate|date('Y-m-d') }}
        </td>

        <td>
            <div class="btn-group" >

                <a href="{{ url('jobSeeker_linkedin', {'id':js.id}) }}"><button type="button" class="btn btn-xs btn-primary">View LinkedIN Profile</button></a>

            </div>
        </td>

        {% if is_granted('ROLE_ADMIN') %}
            <td>
                <div class="btn-group" >

                    <a href="{{ url('jobseeker_delete', {'id':js.id}) }}"><button type="button" class="btn btn-xs btn-danger">Delete</button></a>

                </div>
            </td>
        {% endif %}

        </tr>
    {% endfor %}

   
</table>

{% endblock %}





